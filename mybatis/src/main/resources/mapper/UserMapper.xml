<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.kaishengit.mapper.UserMapper">

    <select id="findId" resultType="com.kaishengit.pojo.User" parameterType="int">
        SELECT id,username,password,address from t_user WHERE id=#{id}
    </select>

    <!--增加-->
    <insert id="save" parameterType="com.kaishengit.pojo.User">
        INSERT INTO t_user(username,password,address)VALUES(#{username},#{password},#{address})
    </insert>


    <delete id="delete" parameterType="int">
        DELETE from t_user WHERE id=#{id}
    </delete>

    <update id="update" parameterType="com.kaishengit.pojo.User">
        UPDATE t_user SET username=#{username},password=#{password},address=#{address} WHERE id=#{id}
    </update>

    <select id="findAll" resultType="com.kaishengit.pojo.User">
         SELECT id,username,password,address from t_user
    </select>



</mapper>