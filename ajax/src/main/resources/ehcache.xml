<?xml version="1.0" encoding="utf-8"?>
<ehcache>
    <diskStore path="java.io.tmpdir"/>

    <!--
            maxElementsInMemory="1000"//cache存放的最大数量
           eternal="false"//是否为常量值，一般为false
           timeToIdleSeconds="30"//闲置时间，要小鱼等于存在时间。
           timeToLiveSeconds="30"//存在时间
           overflowToDisk="true"//超出内存是否存磁盘，true


    -->


    <cache name="myCache"

           maxElementsInMemory="1000"
           eternal="false"
           timeToIdleSeconds="30"
           timeToLiveSeconds="30"
           overflowToDisk="true"
    />






</ehcache>